{
  "forkProcessing": "enabled",
  "onboarding": true,
  "onboardingConfig": {"extends": ["config:recommended"]},
  "autodiscover": true,
  "enabled": true,
  "enabledManagers": ["custom.regex"],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "nvcr.io",
      "username": "$oauthtoken",
      "password": "${RENOVATE_TOKEN}"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^deployments/gpu-operator/.*\\.ya?ml$/"],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w./-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
